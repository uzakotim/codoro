{
  "private": true,
  "name": "codoro",
  "description": "Pomodoro timer built with Nextron, React, and Tailwind CSS",
  "version": "1.0.0",
  "author": "Timur Uzakov <timauzakov@gmail.com>",
  "main": "app/background.js",
  "build": {
    "appId": "com.example.codoro",
    "productName": "Codoro",
    "mac": {
      "icon": "resources/icon.icns"
    },
    "win": {
      "icon": "resources/icon.ico"
    },
    "linux": {
      "icon": "build/icons/icon.png"
    },
    "extraResources": [
      "./resources/**"
    ]
  },
  "scripts": {
    "dev": "nextron",
    "build": "nextron build",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-store": "^7.0.2",
    "lucide-react": "^0.552.0",
    "use-sound": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.52",
    "autoprefixer": "^10.4.19",
    "electron": "^27.0.0",
    "electron-builder": "^26.0.0",
    "next": "^14.2.4",
    "nextron": "^9.5.0",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.7.3"
  }
}
